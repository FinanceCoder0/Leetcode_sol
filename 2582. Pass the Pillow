# https://leetcode.com/problems/pass-the-pillow/submissions/1311196994?envType=daily-question&envId=2024-07-06

class Solution(object):
    def passThePillow(self, n, time):
        sequence = list(range(1, n+1)) + list(range(n-1, 1, -1))
        position = time % len(sequence)
        person_holding_pillow = sequence[position]
        return person_holding_pillow



        
